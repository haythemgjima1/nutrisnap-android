<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme (Default) -->
    <style name="Base.Theme.Nutrisnap" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_electric_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_teal</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        
        <!-- Font -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.Nutrisnap" parent="Base.Theme.Nutrisnap" />

    <style name="Theme.Nutrisnap.Splash" parent="Theme.Nutrisnap">
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>