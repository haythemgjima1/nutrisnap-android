<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_phantom_background"
    android:padding="32dp"
    android:gravity="center">

    <!-- Logo with glow effect -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/phantom_surface_elevated"
        android:layout_marginBottom="32dp">
        
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo_image"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="52sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:textColor="@color/phantom_text_primary"
        android:letterSpacing="0.02"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snap. Track. Thrive."
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/phantom_text_secondary"
        android:layout_marginBottom="80dp"
        android:letterSpacing="0.08"
        android:gravity="center"/>

    <!-- Sign Up Button with gradient -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSignup"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Sign Up"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"
        android:textColor="@color/phantom_text_primary"
        android:background="@drawable/bg_button_phantom"
        android:layout_marginBottom="16dp"
        app:cornerRadius="32dp"
        app:elevation="6dp"/>

    <!-- Login Button outlined -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Log In"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:textColor="@color/phantom_text_primary"
        app:strokeColor="@color/phantom_purple_light"
        app:strokeWidth="2dp"
        android:layout_marginBottom="24dp"
        app:cornerRadius="32dp"/>

    <TextView
        android:id="@+id/tvDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Demo"
        android:textSize="17sp"
        android:fontFamily="sans-serif"
        android:textColor="@color/phantom_accent_teal"
        android:padding="16dp"
        android:letterSpacing="0.03"/>

</LinearLayout>
